@model Quan_Ly_Sinh_Vien.Database.DiemHocPhan

@{
    ViewData["Title"] = "Edit";
}


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Bảng Điểm</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Quản Lý Điểm Sinh Viên</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">

               <h4>Edit</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="MaDiem" />
                            <div class="form-group">
                                <label asp-for="MaSinhVien" class="control-label"></label>
                                <select asp-for="MaSinhVien" class="form-control" asp-items="ViewBag.MaSinhVien"></select>
                                <span asp-validation-for="MaSinhVien" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MaMonHoc" class="control-label"></label>
                                <select asp-for="MaMonHoc" class="form-control" asp-items="ViewBag.MaMonHoc"></select>
                                <span asp-validation-for="MaMonHoc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Diem" class="control-label"></label>
                                <input asp-for="Diem" class="form-control" />
                                <span asp-validation-for="Diem" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LanThi" class="control-label"></label>
                                <input asp-for="LanThi" class="form-control" />
                                <span asp-validation-for="LanThi" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="GhiChu" class="control-label"></label>
                                <input asp-for="GhiChu" class="form-control" />
                                <span asp-validation-for="GhiChu" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-danger" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>

            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
